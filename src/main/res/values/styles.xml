<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelvedinTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#8f5db7</item>
        <item name="colorPrimaryDark">#59267c</item>
        <item name="colorAccent">#a5cfd5</item>
        <!--<item name="windowBackground">#e2d4e7</item>-->
    </style>

    <style name="FullScreen.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FullScreen.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
